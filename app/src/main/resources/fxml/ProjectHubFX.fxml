<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.projecthub.ui.controllers.MainController" 
            prefHeight="600.0" prefWidth="800.0">

    <left>
        <TreeView fx:id="schoolTreeView" prefWidth="200.0" />
    </left>

    <center>
        <VBox spacing="10" padding="10">
            <Label fx:id="titleLabel" text="Project Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Project Details -->
            <GridPane hgap="10" vgap="5" fx:id="projectDetails" visible="false">
                <Label text="Project Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="projectNameField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="descriptionArea" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1" prefRowCount="3"/>

                <Label text="Team:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>  
                <TextField fx:id="teamField" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Deadline:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="deadlineField" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Project Components" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-weight:bold;"/>
    
                <TableView fx:id="componentsTable" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2">
                    <columnResizePolicy>
                        <TableView.CONSTRAINED_RESIZE_POLICY/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="componentNameColumn" text="Component"/>
                        <TableColumn fx:id="componentDescriptionColumn" text="Description"/>
                        <!-- Add additional columns as needed -->
                    </columns>
                </TableView>
            </GridPane>
        </VBox>
    </center>

    <!-- Additional UI components can be added here -->

</BorderPane>