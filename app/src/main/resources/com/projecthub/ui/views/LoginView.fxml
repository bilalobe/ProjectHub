<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="20" styleClass="login-container"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Logo/Title Section -->
    <VBox alignment="CENTER" spacing="10">
        <ImageView fx:id="logoImage" 
                   fitWidth="100" 
                   fitHeight="100" 
                   preserveRatio="true"/>
        <Label text="ProjectHub" 
               styleClass="login-title"/>
        <Label text="Sign in to continue" 
               styleClass="login-subtitle"/>
    </VBox>

    <!-- Login Form -->
    <VBox styleClass="login-form" spacing="15">
        <TextField fx:id="usernameField" 
                  promptText="Username"
                  styleClass="login-field"/>
        
        <PasswordField fx:id="passwordField" 
                      promptText="Password"
                      styleClass="login-field"/>
        
        <HBox alignment="CENTER_LEFT">
            <CheckBox fx:id="rememberMeCheckbox" 
                     text="Remember me"
                     styleClass="login-checkbox"/>
        </HBox>

        <Button fx:id="loginButton" 
                text="Sign In" 
                styleClass="login-button"
                maxWidth="Infinity">
            <tooltip>
                <Tooltip text="Click to sign in to your account." />
            </tooltip>
        </Button>
        
        <Hyperlink fx:id="forgotPasswordLink" 
                   text="Forgot password?"
                   alignment="CENTER">
            <tooltip>
                <Tooltip text="Click to reset your password." />
            </tooltip>
        </Hyperlink>
    </VBox>

    <!-- Error Message -->
    <Label fx:id="errorLabel" 
           styleClass="error-label"
           visible="false"
           managed="false"/>

    <stylesheets>
        <URL value="@../css/styles.css"/>
    </stylesheets>
</VBox>